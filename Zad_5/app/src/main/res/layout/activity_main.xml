<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/playVideoButton" />

    <Button
        android:id="@+id/playVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="mPlayVideoButtonOnClick"
        android:text="@string/play_video" />

    <Button
        android:id="@+id/pauseVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playVideoButton"
        android:layout_centerHorizontal="true"
        android:onClick="mPauseVideoButtonOnClick"
        android:text="@string/pause" />

    <Button
        android:id="@+id/stopVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pauseVideoButton"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="mStopVideoButtonOnClick"
        android:text="@string/stop" />

</RelativeLayout>